@model List<EmployeeRecordProject.Models.Employee>

@{
    ViewBag.Title = "Employee Index";
}

<h2>Employee Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().PhoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().EmailId)
        </th>
        <th></th>
    </tr>

    @foreach (var employee in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.EmailId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = employee.Id }) |
                @Html.ActionLink("Details", "Details", new { id = employee.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = employee.Id })
            </td>
        </tr>
    }
</table>
